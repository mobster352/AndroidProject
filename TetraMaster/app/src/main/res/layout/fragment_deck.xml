<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.tetramaster.DeckFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/backgroundView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftHeadView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightHeadView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/leftHeadView"
        android:layout_toEndOf="@+id/leftHeadView"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:typeface="normal"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/leftHeadView"
        android:layout_centerHorizontal="true"
        android:id="@+id/fragC">

    </RelativeLayout>

</RelativeLayout>
